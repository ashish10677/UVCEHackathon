    <head>
        <title>Todo List</title>
        <link href="/assets/styles.css" rel="stylesheet" type="text/css"/>
        <script src="/assets/todo-list.js"></script>
    </head>
    <body>
        <h1>My Todo List</h1>
        <div id="todo-table">
            <ul>
                <% for(let todo of todos){ %>
                    <li><%=todo%></li>
                <% } %>
            </ul>
        </div>
      <button type="button" id="abc">
        get loc
      </button>
